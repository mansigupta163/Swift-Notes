<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme"
    tools:context="com.moonpi.swiftnotes.StartActivity">

    <TextView
        android:id="@+id/heading"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/theme_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:text="SwiftNotes" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:srcCompat="@drawable/image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login_button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_button3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"

        android:background="@android:color/holo_red_dark"
        android:text="Login"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login_button2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/login_button2"
        android:layout_marginBottom="47dp"
        android:background="@android:color/holo_red_dark"
        android:text="Register"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
