<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.moonpi.swiftnotes.ForgotPassword">


    <android.support.v7.widget.Toolbar
        android:id="@+id/forgotpassword_toolbar"
        android:background="@color/theme_primary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:text="SwiftNotes OTP"
        android:layout_below="@+id/forgotpassword_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forgotpasswordbackground"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="82dp">
    <Button
        android:id="@+id/phone_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Generate OTP"
        android:layout_below="@+id/phone_editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp" />

    <EditText
        android:id="@+id/phone_editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:hint="Enter phone no."
        android:inputType="phone"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/phone_button3"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="10sp"
        android:text="+91"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="50dp"
            android:textAlignment="center"
            android:text="To complete the changing password process enter the mobile number and verify the OTP"
            android:layout_marginTop="1dp"

            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_launcher"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
