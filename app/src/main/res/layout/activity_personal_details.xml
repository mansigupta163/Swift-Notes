<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffe7e7"
    android:layout_height="match_parent"
    tools:context="com.moonpi.swiftnotes.PersonalDetails">


    <android.support.v7.widget.Toolbar
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:id="@+id/personaldetailstoolbar"

        android:background="@color/theme_primary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        ></android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/personaldetailstoolbar"
        android:layout_centerHorizontal="true"

        app:srcCompat="@drawable/bigperson" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Image"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView3"
        android:layout_toStartOf="@+id/imageButton" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="-7dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/personaldetailstoolbar"
        app:srcCompat="@drawable/save_icon" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:paddingTop="20dp"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="100dp" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/darkblue"


                android:layout_column="1"
                android:text="Name:" />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                ></View>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/darkblue"
                android:layout_height="wrap_content"
                android:hint="name"
                android:textAlignment="center"
                android:layout_column="2"
                 />

            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/darkblue"


                android:layout_column="1"
                android:text="Email:" />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                ></View>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter E-mail"
                android:inputType="textPersonName"
                android:textColor="@color/darkblue"
                android:textSize="18sp"
                android:textStyle="bold"

               />
            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/darkblue"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Phone no. :"
                />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                ></View>
            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:ems="10"
                android:hint="Enter phone no."
                android:inputType="textPersonName"
                android:textColor="@color/darkblue"
                android:layout_column="1"
                />


        </TableRow>


    </TableLayout>

</RelativeLayout>
